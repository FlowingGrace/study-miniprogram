@import "./booknote.skeleton.wxss";
page{
  height: 100%;
}
.scroller{
  height: 100%;
}
.booknote_box {
  position: relative;
  padding-bottom: 32rpx;
  font-size: 0;
  border-bottom: 1px solid rgba(184,148,119,0.40);
}
.booknote_symbol {
  width: 44rpx;
  height: 38rpx;
  margin: 36rpx 30rpx 0rpx;
}
.booknote_articel {
  font-size: 30rpx;
  display: block;
  position: relative;
  padding: 14rpx 32rpx 32rpx;
  line-height: 45rpx;
}
.booknote_remark {
  padding: 0 25rpx 0 32rpx;
  height: 44rpx;
  line-height: 54rpx;
  display: table;
}
.booknote_head {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  vertical-align: middle;
}
.booknote_item_name {
  font-size: 32rpx;
  vertical-align: middle;
}
.booknote_item_text {
  font-size: 32rpx;
  vertical-align: middle;
}
.booknote_item_remark {
  color: #000000;
  font-size: 32rpx;
  vertical-align: middle;
}
.video{
  display: block;
  margin: 0 auto;
}
.loading{
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
